#include <iostream>

using namespace std;

class node{

public:
    int data;
    node* left;
    node* right;

    node(int d){

        this->data = d;
        this->left = NULL;
        this->right = NULL;
    }
};

node* builtTree(node* root){

    cout<<"Enter the data: "<<endl;
    int data;
    cin>>data;
    root = new node(data);

    if(data == -1){
        return NULL;
    }
    cout<<"Enter Data for Inserting Left "<<data<<endl;
    root->left = builtTree(root->left);
    cout<<"Enter data for Inserting right"<<data<<endl;
    root->right = builtTree(root->right);

    return root;
}

int main()
{
    node* root = NULL;

    //creating a tree;
    root = builtTree(root);1
    return 0;
}

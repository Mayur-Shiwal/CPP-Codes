#include <iostream>
#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n;
    bool isPower=true;
    cout<<"enter any number under 30 to check the number is power of 2: "<<endl;
    cin>>n;
    for(int i=0;i<=30;i++){
        int ans= pow(2,i);
        if(ans==n){
            isPower=true;
            break;
        }
        else{
            isPower=false;
        }
    }
    if(isPower==true){
        cout<<n<<" "<<"is a power of 2"<<endl;
    }
    else{
        cout<<n<<" "<<"is not a power of 2"<<endl;
    }
    return 0;
}
